						<tests.additionalTestUsers>${tests.additionalTestUsers}</tests.additionalTestUsers>								
						<tests.testContentFolderId>${tests.testContentFolderId}</tests.testContentFolderId>
					</systemPropertyVariables>
					<includes> 
